@model IEnumerable<Core.Entities.PortfolioItem>

@{
    ViewData["Title"] = "Index";
}
<div style="margin:160px">

    <div>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.ImageUrl) *@
                        <label> Image</label>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @* @Html.DisplayFor(modelItem => item.ImageUrl) *@
                            <img src="~/img/portfolio/@item.ImageUrl" style="width:100px; border-radius:20px"/>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> </a> | 
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i> </a> | 
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

